
<% if (lastPage > 2) { %>

  <nav aria-label="Cars Pagination">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="<%= '/cars/?page=' + (currentPage - 1) %>">Previous</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="<%= '/cars/?page=' + 1 %>"><%= 1 %></a>
      </li>
      <li>...</li>

      <% for(let p = Math.max(currentPage-5, 2);
        p <= Math.min(currentPage+5, lastPage);
        p+=1) { %>
        <li class="<%= 'page-item' + ( p === currentPage ? ' active' : '') %>">
          <a class="page-link" href="<%= '/cars/?page=' + p %>"><%= p %></a>
        </li>
      <% } %>

      <li>...</li>
      <li class="page-item">
        <a class="page-link" href="<%= '/cars/?page=' + lastPage %>"
          ><%= lastPage %></a
        >
      </li>
      <li class="page-item">
        <a class="page-link" href="<%= '/cars/?page=' + (currentPage + 1) %>">Next</a>
      </li>
    </ul>
  </nav>
<% } else { %>
  <div></div>
<% } %>

